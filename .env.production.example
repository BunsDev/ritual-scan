# Production Environment Configuration for GCP Deployment
# Copy this file to .env.production and update values for your deployment

# Node Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Ritual Network Configuration
NEXT_PUBLIC_DEFAULT_CHAIN=ritual
NEXT_PUBLIC_NETWORK_NAME="Ritual Network"

# RPC Endpoints (replace with your Ritual node endpoints)
NEXT_PUBLIC_RETH_RPC_URL=http://YOUR_RITUAL_NODE_IP:8545
NEXT_PUBLIC_RETH_WS_URL=ws://YOUR_RITUAL_NODE_IP:8546

# Optional: Additional RPC endpoints for redundancy
NEXT_PUBLIC_RETH_RPC_URL_BACKUP=http://BACKUP_NODE_IP:8545
NEXT_PUBLIC_RETH_WS_URL_BACKUP=ws://BACKUP_NODE_IP:8546

# Analytics Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_REFRESH_INTERVAL=10000

# Performance Settings
NEXT_PUBLIC_REQUEST_TIMEOUT=30000
NEXT_PUBLIC_MAX_BLOCK_RANGE=1000

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false

# Security Settings (for production)
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true

# Monitoring and Logging
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# GCP Specific Settings
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Database (if using Cloud SQL for caching)
DATABASE_URL=postgresql://user:password@/analytics?host=/cloudsql/PROJECT:REGION:INSTANCE
REDIS_URL=redis://REDIS_IP:6379

# Custom Branding (optional)
NEXT_PUBLIC_APP_NAME="Ritual Explorer"
NEXT_PUBLIC_APP_DESCRIPTION="Blockchain Explorer for Ritual Network"
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourcompany.com
