# Environment Configuration
# Copy this file to .env.local for development or .env.production for production

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Etherscan Clone"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Default Blockchain Configuration
NEXT_PUBLIC_DEFAULT_CHAIN=ethereum

# API Keys (get from respective providers)
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key_here
NEXT_PUBLIC_POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
NEXT_PUBLIC_ARBISCAN_API_KEY=your_arbiscan_api_key_here
NEXT_PUBLIC_BASESCAN_API_KEY=your_basescan_api_key_here

# Custom RETH Node Configuration
NEXT_PUBLIC_RETH_RPC_URL=http://35.185.40.237:8545
NEXT_PUBLIC_RETH_WS_URL=ws://35.185.40.237:8546
NEXT_PUBLIC_RETH_BACKUP_RPC_URL=http://130.211.246.58:8545

# Third-party Services (optional)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_key_here
NEXT_PUBLIC_INFURA_PROJECT_ID=your_infura_project_id_here

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here

# Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Performance Configuration
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_RETRIES=3
NEXT_PUBLIC_CACHE_TTL=30000

# Feature Flags
NEXT_PUBLIC_ENABLE_MEMPOOL=true
NEXT_PUBLIC_ENABLE_CHARTS=true
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# Security
NEXT_PUBLIC_CSP_NONCE=random_nonce_here
